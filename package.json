{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "recent-projects",
  "title": "Recent Projects",
  "packageManager": "pnpm@10.13.1",
  "description": "A Raycast extension to quickly access recent projects.",
  "author": "Lu-Jiejie",
  "license": "MIT",
  "categories": [
    "Productivity"
  ],
  "platforms": [
    "Windows"
  ],
  "icon": "icon.png",
  "commands": [
    {
      "name": "vscode",
      "title": "Visual Studio Code Recent Projects",
      "description": "Quickly open recent projects in Visual Studio Code.",
      "mode": "view"
    },
    {
      "name": "cursor",
      "title": "Cursor Recent Projects",
      "description": "Quickly open recent projects in Cursor.",
      "mode": "view"
    },
    {
      "name": "chrome",
      "title": "Google Chrome Bookmarks",
      "description": "Quickly open bookmarks in Google Chrome.",
      "mode": "view"
    },
    {
      "name": "edge",
      "title": "Microsoft Edge Bookmarks",
      "description": "Quickly open bookmarks in Microsoft Edge.",
      "mode": "view"
    }
  ],
  "scripts": {
    "dev": "ray develop",
    "build": "ray build -e dist",
    "lint": "eslint .",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "prepare": "simple-git-hooks",
    "preferences": "esno scripts/preferences.ts"
  },
  "dependencies": {
    "@raycast/api": "^1.100.3",
    "@raycast/utils": "^2.2.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.16.2",
    "@raycast/eslint-config": "^2.0.4",
    "@types/node": "^20.19.7",
    "@types/react": "^19.1.8",
    "eslint": "^9.31.0",
    "esno": "^4.8.0",
    "lint-staged": "^16.1.2",
    "simple-git-hooks": "^2.13.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  },
  "preferences": [
    {
      "name": "vscodeStoragePath",
      "title": "Visual Studio Code Storage Path",
      "description": "Path to \"state.vscdb\"",
      "type": "textfield",
      "default": "",
      "required": false
    },
    {
      "name": "vscodeExePath",
      "title": "Visual Studio Code Exe Path",
      "description": "Path to \"code.exe\"",
      "type": "textfield",
      "default": "",
      "required": false
    },
    {
      "name": "cursorStoragePath",
      "title": "Cursor Storage Path",
      "description": "Path to \"state.vscdb\"",
      "type": "textfield",
      "default": "",
      "required": false
    },
    {
      "name": "cursorExePath",
      "title": "Cursor Exe Path",
      "description": "Path to \"Cursor.exe\"",
      "type": "textfield",
      "default": "",
      "required": false
    },
    {
      "name": "chromeBookmarkPath",
      "title": "Google Chrome Bookmark Path",
      "description": "Path to \"Bookmarks\"",
      "type": "textfield",
      "default": "",
      "required": false
    },
    {
      "name": "chromeExePath",
      "title": "Google Chrome Exe Path",
      "description": "Path to \"chrome.exe\"",
      "type": "textfield",
      "default": "",
      "required": false
    },
    {
      "name": "edgeBookmarkPath",
      "title": "Microsoft Edge Bookmark Path",
      "description": "Path to \"Bookmarks\"",
      "type": "textfield",
      "default": "",
      "required": false
    },
    {
      "name": "edgeExePath",
      "title": "Microsoft Edge Exe Path",
      "description": "Path to \"msedge.exe\"",
      "type": "textfield",
      "default": "",
      "required": false
    }
  ]
}
