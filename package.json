{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "recent-projects",
  "title": "Recent Projects",
  "packageManager": "pnpm@10.13.1",
  "description": "A Raycast extension to quickly access recent projects.",
  "author": "Lu-Jiejie",
  "license": "MIT",
  "categories": [
    "Productivity"
  ],
  "platforms": [
    "Windows"
  ],
  "icon": "icon.png",
  "commands": [
    {
      "name": "vscode",
      "title": "Visual Studio Code",
      "description": "Quickly open recent projects in Visual Studio Code.",
      "mode": "view",
      "preferences": [
        {
          "name": "vscodeStoragePath",
          "title": "VSCode Storage Path",
          "description": "Path to VSCode recent projects storage file.",
          "type": "textfield",
          "default": "",
          "placeholder": "C:/Users/USER_NAME/AppData/Roaming/Code/storage.json",
          "required": true
        },
        {
          "name": "vscodeExePath",
          "title": "VSCode Executable Path",
          "description": "Path to VSCode code.exe executable.",
          "type": "textfield",
          "default": "",
          "placeholder": "C:/Program Files/Microsoft VS Code/code.exe",
          "required": true
        }
      ]
    }
  ],
  "scripts": {
    "dev": "ray develop",
    "build": "ray build -e dist",
    "lint": "eslint .",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "@raycast/api": "^1.100.3",
    "@raycast/utils": "^2.2.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.16.2",
    "@raycast/eslint-config": "^2.0.4",
    "@types/node": "^20.19.7",
    "@types/react": "^19.1.8",
    "eslint": "^9.31.0",
    "esno": "^4.8.0",
    "lint-staged": "^16.1.2",
    "simple-git-hooks": "^2.13.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
